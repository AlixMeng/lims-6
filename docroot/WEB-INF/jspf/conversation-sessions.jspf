
<% { %>

<c:forEach items="${conversations}" var="conversation">

    <%--<c:choose> --%>
        <%--<c:when test="${conversation.unreadMessages > 0}" > --%>
            <%--<c:set var="waiting" value="waiting"/>--%>
        <%--</c:when> --%>
        <%--<c:otherwise> --%>
            <%--<c:set var="waiting" value=""/>--%>
        <%--</c:otherwise> --%>
    <%--</c:choose>            --%>

    <c:choose> 
        <c:when test="${show}" >
            <c:set var="hidden" value=""/>
        </c:when> 
        <c:otherwise> 
            <c:set var="hidden" value="aui-helper-hidden"/>
        </c:otherwise> 
    </c:choose>

    <li>
        <div class="panel-trigger">
            <span class="trigger-name">${conversation.title}</span>

            <c:if test="${conversation.unreadMessagesCount > 0}">
                <div class="unread">${conversation.unreadMessagesCount}</div>
            </c:if>
        </div>
        <div class="chat-panel">
            <div class="panel-window">
                <div class="panel-button close"></div>
                <div class="panel-button minimize"></div>
                <div class="panel-button search"></div>
                <div class="panel-title">${conversation.title}</div>
                <div class="panel-search hidden">
                    <aui:input cssClass="search-input"
                               inputCssClass="search-input-field"
                               label=""
                               name="searchConversation"/>
                </div>
                <div class="panel-content">
                    <div class="preloader"></div>
                </div>
                <div class="panel-input">
                    <textarea placeholder="<liferay-ui:message key="message-placeholder" />"></textarea>
                </div>
            </div>
        </div>
    </li>

</c:forEach>

<% }%>
