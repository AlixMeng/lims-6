{
    "name": "lims",
    "builds": {

        "lims-core": {
            "jsfiles": [
                "js/core/Notification.js"
            ],
            "config": {
                "requires": [
                    "swfobject"
                ]
            }
        },

        "lims-model": {
            "jsfiles": [
                "js/model/BuddyModelItem.js",
                "js/model/BuddyModelList.js",
                "js/model/GroupModelItem.js",
                "js/model/GroupModelList.js"
            ],
            "config": {
                "requires": [
                    "io",
                    "model",
                    "model-list"
                ]
            }
        },

        "lims-view": {
            "jsfiles": [
                "js/view/GroupBuddyViewItem.js",
                "js/view/GroupBuddyViewList.js",
                "js/view/GroupViewItem.js",
                "js/view/GroupViewList.js"
            ],
            "config": {
                "requires": [
                    "view",
                    "node"
                ]
            }
        },

        "lims-controller": {
            "jsfiles": [
                "js/controller/GroupViewController.js",
                "js/controller/MainController.js"
            ],
            "config": {
                "requires": [
                    "view"
                ]
            }
        }
    }
}